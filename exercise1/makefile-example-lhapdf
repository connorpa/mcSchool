C_COMP=g++
C_FLAGS=-c -O0 
CXXFLAGS      = -c -O0 -ansi -Wall -D_GNU_SOURCE -g -O2 -D_REENTRANT -pthread -std=c++11 -m64  $(INCLUDES)
LOADER=g++ -Wall
 



ifdef LHAPDFPATH
LHAPDFINCLUDE=$(LHAPDFPATH)/include
else
prefix=/Users/jung/MCGenerators
lhapdfvers=5.9.1
LHAPDFPATH=${prefix}/lhapdf/${lhapdfvers}
LHAPDFINCLUDE=$(LHAPDFPATH)/include
endif 
LHAPDFLIB=/lib -lLHAPDF
LD_OPTS = -lm 

MAIN_OBJS =  ranlxd.o example-lhapdf.o
example-lhapdf:  $(MAIN_OBJS)
	$(LOADER) -o example-lhapdf  $(MAIN_OBJS) \
      -L$(LHAPDFPATH)$(LHAPDFLIB) \
	`root-config --libs` $(LD_OPTS)

.cc.o:
	$(C_COMP) $(CXXFLAGS) -I${LHAPDFINCLUDE} -I `root-config --incdir` $*.cc
